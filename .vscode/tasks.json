{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm:watch-web",
      "command": "npm",
      "type": "shell",
      "args": ["run", "watch-web"],
      "problemMatcher": ["$tsc", "$node-sass"],
      "group": "none",
      "options": {
        "cwd": "${workspaceRoot}/client"
      }
    },
    {
      "label": "dotnet:build",
      "command": "dotnet",
      "type": "shell",
      "args": ["build"],
      "problemMatcher": ["$msCompile"],
      "group": { "kind": "build", "isDefault": true },
      "options": {
        "cwd": "${workspaceRoot}/server/src/GisHub.Entry"
      }
    },
    {
      "label": "dotnet:run",
      "command": "dotnet",
      "type": "shell",
      "args": ["run"],
      "problemMatcher": ["$msCompile"],
      "group": "none",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceRoot}/server/src/GisHub.Entry"
      }
    },
    {
      "label": "dotnet:watch-run",
      "command": "dotnet",
      "type": "shell",
      "args": ["watch", "run"],
      "problemMatcher": ["$msCompile"],
      "group": "none",
      "options": {
        "cwd": "${workspaceRoot}/server/src/GisHub.Entry"
      }
    },
    {
      "label": "dotnet:build:Gmap",
      "command": "dotnet",
      "type": "shell",
      "args": ["build"],
      "problemMatcher": ["$msCompile"],
      "group": { "kind": "build", "isDefault": true },
      "options": {
        "cwd": "${workspaceRoot}/server/test/GisHub.Gmap"
      }
    },
    {
      "label": "dotnet:build:VectorTile",
      "command": "dotnet",
      "type": "shell",
      "args": ["build"],
      "problemMatcher": ["$msCompile"],
      "group": { "kind": "build", "isDefault": true },
      "options": {
        "cwd": "${workspaceRoot}/server/test/GisHub.VectorTile"
      }
    }
  ]
}
