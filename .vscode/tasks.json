{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm:start",
      "command": "npm",
      "type": "shell",
      "args": ["run", "start"],
      "problemMatcher": ["$tsc", "$node-sass"],
      "options": {
        "cwd": "${workspaceRoot}/client"
      }
    },
    {
      "label": "npm:lint",
      "command": "npm",
      "type": "shell",
      "args": ["run", "lint"],
      "problemMatcher": ["$tslint5"],
      "options": {
        "cwd": "${workspaceRoot}/client"
      }
    },
    {
      "label": "npm:build",
      "command": "npm",
      "type": "shell",
      "args": ["run", "build"],
      "problemMatcher": ["$tsc", "$node-sass"],
      "group": { "kind": "build", "isDefault": true },
      "options": {
        "cwd": "${workspaceRoot}/client"
      }
    },
    {
      "label": "npm:test-coverage",
      "command": "npm",
      "type": "shell",
      "args": ["run", "test-coverage"],
      "problemMatcher": [],
      "group": { "kind": "test", "isDefault": true },
      "options": {
        "cwd": "${workspaceRoot}/client"
      }
    },
    {
      "label": "dotnet:build",
      "command": "dotnet",
      "type": "shell",
      "args": ["build"],
      "problemMatcher": ["$msCompile"],
      "group": { "kind": "build", "isDefault": true },
      "options": {
        "cwd": "${workspaceRoot}/server/src/NetCoreApp.Api"
      }
    },
    {
      "label": "dotnet:run",
      "command": "dotnet",
      "type": "shell",
      "args": ["run"],
      "problemMatcher": ["$msCompile"],
      "options": {
        "cwd": "${workspaceRoot}/server/src/NetCoreApp.Api"
      }
    },
    {
      "label": "dotnet:watch",
      "command": "dotnet",
      "type": "shell",
      "args": ["watch", "run"],
      "problemMatcher": ["$msCompile"],
      "options": {
        "cwd": "${workspaceRoot}/server/src/NetCoreApp.Api"
      }
    },
    {
      "label": "dotnet:test",
      "command": "dotnet",
      "type": "shell",
      "args": ["test"],
      "problemMatcher": ["$msCompile"],
      "options": {
        "cwd": "${workspaceRoot}/server/test/NetCoreApp.Test"
      }
    }
  ]
}
