{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dotnet:build",
      "command": "dotnet",
      "type": "shell",
      "args": ["build"],
      "problemMatcher": ["$msCompile"],
      "group": { "kind": "build", "isDefault": true },
      "options": {
        "cwd": "${workspaceRoot}/src/Entry"
      }
    },
    {
      "label": "dotnet:run",
      "command": "dotnet",
      "type": "shell",
      "args": ["run"],
      "problemMatcher": ["$msCompile"],
      "group": "none",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceRoot}/src/Entry"
      }
    },
    {
      "label": "dotnet:watch-run",
      "command": "dotnet",
      "type": "shell",
      "args": ["watch", "run"],
      "problemMatcher": ["$msCompile"],
      "group": "none",
      "options": {
        "cwd": "${workspaceRoot}/src/Entry"
      }
    }
  ]
}
