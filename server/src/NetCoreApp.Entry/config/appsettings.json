{
  "identity": {
    "user": {
      "requireUniqueEmail": true
    },
    "password": {
      "requireDigit": false,
      "requireLowercase": false,
      "requireNonAlphanumeric": false,
      "requireUppercase": false,
      "requiredLength": 8,
      "requiredUniqueChars": 0
    },
    "lockout": {
      "allowedForNewUsers": true,
      "defaultLockoutTimeSpan": "01:00:00",
      "maxFailedAccessAttempts": 5
    }
  },
  "allowedHosts": "*",
  "cors": {
    "origins": ["*"],
    "headers": ["*"],
    "methods": ["*"],
    "supportsCredentials": false
  },
  "jwt": {
    "secret": ".NET CORE APP JWT",
    "expireTimeSpan": "01:00:00"
  },
  "spaFailback": {
    "rules": [
      { "pathbase": "/handset/(?!assets/).*", "failback": "/handset/index.html" },
      { "pathbase": "/tablet/(?!assets/).*", "failback": "/tablet/index.html" },
      { "pathbase": "/web/(?!assets/).*", "failback": "/web/index.html" }
    ]
  },
  "customHeader": {
    "headers": {
      "X-Frame-Options": "SAMEORIGIN",
      "X-Content-Type-Options": "nosniff",
      "X-XSS-Protection": "1; mode=block"
    }
  },
  "kestrel": {
    "addServerHeader": false,
    "allowSynchronousIO": true,
    "limits": {
      "maxConcurrentConnections": 1000,
      "maxConcurrentUpgradedConnections": 1000
    }
  },
  "forwardedHeaders": {
    "forwardLimit": 2,
    "knownProxies": ["127.0.0.1"],
    "allowedHosts": ["*"],
    "forwardedHeaders": 7,
    "forwardedForHeaderName": "X-Forwarded-For",
    "forwardedHostHeaderName": "X-Forwarded-Host",
    "forwardedProtoHeaderName": "X-Forwarded-Proto"
  }
}
